.ds-first {
  background-repeat: no-repeat;
  background-position: center;
  position: relative;

  .ds-map {
    left: 0px;
    top: 0px;
    right: 0px;
    bottom: 0px;
    z-index: 1;
    position: absolute;
  }

  &__cover {
    position: absolute;
    left: 0px;
    top: 0px;
    right: 0px;
    bottom: 0px;
    z-index: 10;
    background: rgba($color-primary, 0.4);
  }

  .container {
    height: 510px;
    z-index: 111;
    // background-position: right top;
    position: relative;
  }

  .card-forecast {
    bottom: 0px;
    left: 0px;
    right: 0px;
    position: absolute;
  }
}

.footer {
  width: 100%;
  text-align: center;
  height: 100px;
  padding: 30px;
  background: $color-primary-ss;
}

.chart {
  width: 100%;
  height: 400px;

  .inner {
    height: 400px;
  }
}
