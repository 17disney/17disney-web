.ds-first {
  background-repeat: no-repeat;
  background-position: center;
  position: relative;

  .ds-map {
    left: 0px;
    top: 0px;
    right: 0px;
    bottom: 0px;
    z-index: 1;
    position: absolute;
  }

  &__cover {
    position: absolute;
    left: 0px;
    top: 0px;
    right: 0px;
    bottom: 0px;
    z-index: 10;
    background: rgba($color-primary, 0.7);
  }

  .container {
    height: 400px;
    padding-top: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    z-index: 111;
    position: relative;
    color: #FFF;
    text-align: center;
  }

  &__icon {
    font-size: 100px;
  }

  &__title {
    font-size: 30px;
    font-weight: 500;
  }

  .card-forecast {
    bottom: 0px;
    left: 0px;
    right: 0px;
    position: absolute;
  }

  .ds-tab-home {
    margin-top: 30px;
  }
}

.footer {
  width: 100%;
  text-align: center;
  height: 100px;
  padding: 30px;
  background: $color-primary-ss;
}

.chart {
  width: 100%;
  height: 400px;

  .inner {
    height: 400px;
  }
}
